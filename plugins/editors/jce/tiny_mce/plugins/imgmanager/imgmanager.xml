		</param>
        <param name="imgmanager_border" type="list" default="0" label="BORDER ENABLE" description="BORDER ENABLE DESC">
				<option value="1">YES</option>
            	<option value="0">NO</option>
		</param>
		<param name="imgmanager_border_width" type="list" default="default" label="BORDER WIDTH" description="BORDER WIDTH DESC">
				<option value="default">NOT SET</option>
				<option value="0">0</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
