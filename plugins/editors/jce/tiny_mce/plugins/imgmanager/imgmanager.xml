        </param>
		<param name="imgmanager_folder_new" type="list" default="1" label="FOLDER CREATE" description="FOLDER CREATE DESC">
           <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="imgmanager_folder_delete" type="list" default="1" label="FOLDER DELETE" description="FOLDER DELETE DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="imgmanager_folder_rename" type="list" default="1" label="FOLDER RENAME" description="FOLDER RENAME DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="imgmanager_file_delete" type="list" default="1" label="FILE DELETE" description="FILE DELETE DESC">
